ENABLE_TMUX=false
TERMINAL_NAME=`ps -o 'cmd=' -p $(ps -o 'ppid=' -p $$)`
case $TERMINAL_NAME in
  *"guake"*)
    ENABLE_TMUX=true
    ;;
  *"vscode"*)
    ;;
  *"gnome-terminal-server"*)
    ENABLE_TMUX=true
    ;;
esac

if [ -t 0 ] && [[ -z $TMUX ]] && [[ $- = *i* ]] && "${ENABLE_TMUX}"; then
  exec tmux
fi

alias cp='cp -i'
alias df='df -h'
alias free='free -m'

alias vi=nvim
alias ll='ls -laF'
alias p=python3

alias ide=~/.bin/ide.sh

case ${OSTYPE} in
  linux*)
    alias open='xdg-open'
    alias pbcopy='xclip -selection c'
    alias pbpaste='xclip -selection c -o'
    ;;
  darwin*)
    ;;
esac
